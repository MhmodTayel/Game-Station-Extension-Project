{
  "manifest_version": 2,
  "name": "Word Definition",
  "version": "2.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "bg.png",
    "default_popup": "popup.html",
    "default_title": "Word Definition."
  }
}